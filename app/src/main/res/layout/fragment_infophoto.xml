<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.FacebookFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/textView3"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories:"
        android:id="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:hint="No Photo Name"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocation"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/tvName"
        android:hint="No Location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEntDate"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/tvLocation"
        android:hint="No Date"
        android:maxLines="1" />

    <android.support.v17.leanback.widget.HorizontalGridView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/gvCategoriesPhoto"
        android:layout_alignStart="@+id/tvEntDate"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tvEntDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNoCat"
        android:hint="No Categories"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignStart="@+id/gvCategoriesPhoto" />

</RelativeLayout>
